<%= form_for([@words, @words.comments.build], :html => {:class => 'form-horizontal'}) do |f| %>
  <div class="field">
    <%= f.label :autor, "Nome" %>
    <% if current_user %>
      <%= f.text_field :autor, :value => current_user.name %>
    <% end %>

  </div>
  <div class="field">
    <%= f.label :body, "Comentario" %>
    <%= f.text_area :body, :rows => 4 %>
  </div>

  <div class="actions">
    <%= f.submit "Comentar" %>
  </div>


<% end %>